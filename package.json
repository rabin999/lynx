{
  "name": "lynx",
  "version": "1.0.0",
  "description": "NodeJS scalable architecture",
  "main": "app.js",
  "scripts": {
    "start": "node dist/bin/www/server.js",
    "seed": "concurrently -k \"npm run build-ts\" \"node dist/services/database/seeder.js\"",
    "serve": "npx nodemon dist/bin/www/server.js",
    "watch-node": "nodemon dist/bin/www/server.js",
    "test": "jest --colors --forceExit --verbose --detectOpenHandles",
    "test-coverage": "jest --colors --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base --list-different \"app/**/*.ts\"",
    "prettier:write": "npm run prettier:base --write \"app/**/*.ts\"",
    "serve-debug": "nodemon --inspect dist/bin/www/server.js",
    "dev": "env APP_ENVIRONMENT=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "prod": "env APP_ENVIRONMENT=production concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "Rabin Bhandari <rabin.bhandari999@gmail.com>",
  "license": "MIT",
  "keywords": [
    "fastify",
    "security"
  ],
  "dependencies": {
    "@types/heapdump": "^0.3.1",
    "@types/pino": "^5.15.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "depcheck": "^0.9.2",
    "express": "^4.17.1",
    "fastify": "^2.11.0",
    "fastify-helmet": "^3.0.2",
    "heapdump": "^0.3.15",
    "lusca": "^1.6.1",
    "mysql2": "^2.1.0",
    "pino": "^5.15.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/lusca": "^1.6.1",
    "@types/node": "^12.12.22",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.2.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:check"
    }
  }
}
