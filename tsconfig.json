{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist/",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "extendedDiagnostics": true,
        "paths": {
            "*": [
                "node_modules/*",
                // "src/types/*"
            ]
        }
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
