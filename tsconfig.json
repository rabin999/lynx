{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "extendedDiagnostics": true,
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
